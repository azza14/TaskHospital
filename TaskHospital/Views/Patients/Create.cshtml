@model TaskHospital.Models.Patient

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<h2 class="text-right">اضافة مريض جديد</h2>

@using (Html.BeginForm("Create", "Patients", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-8">
                @Html.EditorFor(model => model.PatientNameArabic, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PatientNameArabic, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.PatientNameArabic, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>

        <div class="form-group">
            <div class="col-md-8">
                @Html.EditorFor(model => model.PatientNameEnglish, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PatientNameEnglish, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.PatientNameEnglish, htmlAttributes: new { @class = "control-label col-md-2" })

        </div>
        <div class="form-group">
            <div class="col-md-8">
                @Html.EditorFor(model => model.HomePhone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HomePhone, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.HomePhone, htmlAttributes: new { @class = "control-label col-md-2" })

        </div>
        <div class="form-group">
            <div class="col-md-8">
                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })

        </div>

        <div class="form-group">
            <div class="col-md-8 text-right">
                <div class="col-md-10">
                    Male
                    @Html.RadioButtonFor(model => model.Gender, "Male")
                    Female
                    @Html.RadioButtonFor(model => model.Gender, "Female")
                </div>
            </div>
            @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })

        </div>

        <div class="form-group">
            <div class="col-md-8 ">
                <input type="file" name="upload" required style="margin-left:78%" />
                @Html.ValidationMessageFor(model => model.PatientImage, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.PatientImage, htmlAttributes: new { @class = "control-label col-md-2" })

        </div>
        <div class="form-group">
            <div class="col-md-8">
                @Html.DropDownList("TypePatient", null, "-- اختر نوع المرض  --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TypePatients_ID, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.TypePatients_ID, "نوع المرض   ", htmlAttributes: new { @class = "control-label col-md-2" })

        </div>


        <div class="form-group">
            <div class="col-md-offset-7 col-md-10">
                <input type="submit" value="انشاء" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("العودة الي الصفحة الرئسية", "Index", null, new { @class = "btn btn-primary col-md-offset-10" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}