@model TaskHospital.Models.RegisterViewModel
@{
    ViewBag.Title = "تسجيل مستخدم جديد";
}

<h2 class="text-left" style="margin-left:80%">@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })

    </div>

    <div class="form-group">
        <div class="col-md-8">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })

    </div>
    <div class="form-group">
        <div class="col-md-8">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })

    </div>
    <div class="form-group">
        <div class="col-md-8">
            @Html.DropDownList("UserType", null, new { @class = "form-control" })
            @*@Html.DropDownList("UserType", ViewBag.UserTpe as SelectList, new { @class = "form-control" })*@
        </div>
        @Html.LabelFor(m => m.UserType, new { @class = "col-md-2 control-label" })

    </div>
    <div class="form-group">
        <div class="col-md-offset-8 col-md-10">
            <input type="submit" class="btn btn-primary" value="تسجيل " />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
